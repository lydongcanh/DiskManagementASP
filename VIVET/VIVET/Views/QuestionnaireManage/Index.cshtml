
@{
    ViewBag.Title = "Danh Sách Dữ Liệu";
}

@using System.Linq
@using Ehr.Common.Constraint
@using Ehr.Models
@using Ehr.Common.UI;
@using System.ComponentModel.DataAnnotations;
@using Ehr.Auth;
@model IEnumerable<Ehr.Models.Questionnaire>
@{
    var userid = User.UserId;
    Ehr.Data.EhrDbContext context = new Ehr.Data.EhrDbContext();
    var user = (from c in context.Users where c.Id == userid select c).FirstOrDefault();
    bool iscentral = user.IsCentral;

}
<div class="modal fade" id="uploadFileModal" role="dialog" aria-labelledby="uploadFileModal" aria-hidden="true" style="margin-top:8%">
    <div class="modal-dialog p-2" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <b> Tải danh sách sản phẩm </b>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

           @using (Html.BeginForm("Import", "QuestionnaireManage", FormMethod.Post, new
            {
                enctype = "multipart/form-data"
            }))
            {               
                <input type="hidden" name="userid" id="userid" value="" class="form-control" />
                <div class="card-body">
                    <div class="form-group">
                        <label for="optImportFile">Chọn tập tin tải lên (định dạng .xlsx)</label>
                        <div class="input-group mb-3">
                            <input class="form-control" type="file" name="optImportFile" id="optImportFile" accept=".xlsx,.xls" required>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="background-color:white">
                    <button type="submit" class="btn bg-primary float-right" @*onclick="return validateSubmission();"*@>Tải lên danh sách</button>
                    <button type="button" class="btn  btn-warning  " data-dismiss="modal" aria-label="Close">Hủy thao tác</button>
                </div>
            }
        </div>
    </div>
</div>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="card card-default color-palette-box">
            <div class="row card-header" style="border:none;">
                <div class="col-sm-6">
                    <h5>
                        Danh mục dữ liệu
                    </h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách dữ liệu</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            @using (Html.BeginForm("Index", "QuestionnaireManage", FormMethod.Get))
            {
            <div class="card-header">
                <button type="button" class="btn bg-primary btn-sm" data-toggle="modal" data-target="#uploadFileModal">
                    <i class="fas fa-file-excel">
                    </i>
                    Nhập từ Excel
                </button>
                <a class="btn bg-teal btn-sm " href="/QuestionnaireManage/Export">
                    <i class="fas fa-file-excel">
                    </i>
                    Xuất file Excel
                </a>
                <div class="card-tools float-right">
                    <div class="input-group input-group-sm float-right">
                        <div class="input-group-append" style="margin-top:5px">
                            Kích thước trang&nbsp;&nbsp;
                        </div>
                        @Html.DropDownList("size", (List<SelectListItem>)ViewBag.size, new { @onchange = "this.form.submit();", @class = "form-control custom-select", @style = "border-radius:5px;width:55px;" })&nbsp;&nbsp;
                        @Html.Hidden("page", (object)ViewBag.page)
                        @Html.Hidden("sortProperty", (object)ViewBag.sortProperty)
                        @Html.Hidden("sortOrder", (object)ViewBag.sortOrder)
                        @Html.Hidden("size", (object)ViewBag.pageSize)
                        @Html.TextBox("SearchString", (string)ViewBag.searchValue, new { @class = "form-control", @type = "text", @placeholder = "Tìm...", @style = "border-radius:5px;width:200px" })
                        @Html.Hidden("page", (object)ViewBag.page)
                        @Html.Hidden("sortProperty", (object)ViewBag.sortProperty)
                        @Html.Hidden("sortOrder", (object)ViewBag.sortOrder)
                        @Html.Hidden("size", (object)ViewBag.pageSize)
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            }
            <!-- /.card-tools -->
            <div class="card-body table-responsive p-0 zoom-table">
                <div class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered table-hover dataTable">
                                <thead>
                                    <tr>
                                        <th style="width: 1%">
                                            STT
                                        </th>
                                        @Html.Raw(ViewBag.GridHeader)
                                        <th style="width: 15%">
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int dem = ViewBag.fromItem;
                                    }
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            @{
                                                var state = i.State.GetAttribute<DisplayAttribute>().Name;
                                                var bg = "";
                                                if (i.State == State.APPROVE)
                                                {
                                                    bg = "bg-teal";
                                                }
                                                else if (i.State == State.WAIT)
                                                {
                                                    bg = "bg-yellow";
                                                }
                                                else
                                                {
                                                    bg = "bg-red";
                                                }
                                            }
                                            <td>
                                                <input type="hidden" class="lsques" value="@i.Id"/>
                                                @dem
                                                @{dem++;}
                                            </td>
                                            <td>
                                                @i.D_u_th_i_gian
                                            </td>
                                            <td>
                                                @i.A1__Product_origin
                                            </td>
                                            <td>
                                                @i.A2__Product_code
                                            </td>
                                            <td>
                                                @i.A3__Product_name
                                            </td>
                                            <td>
                                                @i.A4__Company
                                            </td>
                                            <td>
                                                @i.A5__Type_of_product
                                            </td>
                                            <td>
                                                @i.A7__Volume_of_product
                                            </td>
                                            <td>
                                                @i.A8__Unit_of_volume_of_product
                                            </td>
                                            <td>
                                                <span class="badge @bg">@state</span>
                                            </td>

                                            <td class="project-actions text-right">
                                                <a href="@Url.Action("Detail", new { id = i.Id })" class="btn btn-or-cus btn-sm">
                                                    <i class="fas fas fa-folder"></i>
                                                    <span>Xem</span>
                                                </a>
                                                @if (iscentral)
                                                {
                                                    <a href="@Url.Action("Update", new { id = i.Id })" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-pencil-alt">
                                                    </i><span>Sửa</span>
                                                    </a>
                                                }                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @Html.Raw(ViewBag.paging)
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>

<div id="ezloader" style="display:none;position:absolute;top:50%;left:50%;padding:2px;">
    <img src="~/Content/img/loader.gif" />
</div>

@Scripts.Render("~/Content/admin-lte/plugins/datatables/jquery.dataTables.min.js")
@Scripts.Render("~/Content/admin-lte/plugins/datatables-bs4/js/dataTables.bootstrap4.js")
@Styles.Render("~/Content/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.css")
@{
    var loaderpath = Url.Action("Content/img/loader.gif", "/", null, Request.Url.Scheme);
}
<script>
    var flag = "/QuestionnaireManage/Index"
</script>
<script>
    $(document).ajaxStart(function () {
        $("#ezloader").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $("#ezloader").css("display", "none");
    });
    function Export() {
        var listId = [];
        $('.lsques').each(function () {
            listId.push(this.value);
        });
        console.log(listId);
        if (listId == null || listId == "" || listId.length == 0) {
            toastr.warning("Không tìm thấy sản phẩm");
        } else {
            $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    type: "POST",
                    dataType: "json",
                    url: "@Url.Action("Export", "QuestionnaireManage")"
                });
        }
    }
    
</script>