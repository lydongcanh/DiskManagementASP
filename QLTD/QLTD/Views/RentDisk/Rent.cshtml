    var loaderpath = Url.Action("Content/img/loader.gif", "/", null, Request.Url.Scheme);
}
<script>
    var flag = "/Disk/DiskTitle"
</script>
<script>
    $(document).ajaxStart(function () {
        $("#ezloader").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $("#ezloader").css("display", "none");
    });

    $("#form-add-title").submit(function (e) {
        e.preventDefault();
        var serializedForm = $(this).serializeArray();
        var Code = serializedForm[1].value;
        console.log(serializedForm);
        if (serializedForm[3].value == "-1") {
            toastr.warning("Vui lòng chọn loại", "Warning");
        } if (serializedForm[2].value == "") {
            toastr.warning("Vui lòng nhập tên tiêu đề", "Warning");
        } else if (Code !== "") {
            $.ajax({
                type: "POST",
                dataType: "json",
                data: serializedForm,
                url: "/Disk/AddDiskTitle",
                success: function (item) {
                    if (item.success) {
                        toastr.success(item.message);
                        ResetForm();

                        $("#AddTitle").modal('hide');
                        setTimeout(function () {
                            window.location.reload();
                        }, 500);
                    } else {
                        toastr.warning(item.message);
                    }
                },
                error: function (err) {
                    setTimeout(function () {
                        toastr.error("Lưu dữ liệu không thành công", "Failed");
                    }, 500);
                    console.log(err);
                }
            });
        } else {
            toastr.warning("Vui lòng nhập mã tiêu đề !");
        }
    });

    function ResetForm() {
        var id = $('#Id').val('');
        $("#form-add-title")[0].reset();
    }
    $("#AddTitle").on('hide.bs.modal', function () {
        ResetForm();
    });
    function EditAntimi(id, Code, Name, Price, LateCharge, Description, Status, IdType) {
        $("#form-add-title")[0].reset();
        $("#AddTitle").modal('show');
        var id = $('#Id').val(id);
        var Code = $('#Code').val(Code);
        var Name = $('#Name').val(Name);
        var Price = $('#Price').val(Price);
        var LateCharge = $('#LateCharge').val(LateCharge);
        var Description = $('#Description').val(Description);
        $('#DiskType').val(IdType).trigger('change');
        if (Status == 'PENDING') {
            $('#radioStatus0').click();
        } else {

            $('#radioStatus1').click();
        }
        $("#Code").focus();
    }
</script>
