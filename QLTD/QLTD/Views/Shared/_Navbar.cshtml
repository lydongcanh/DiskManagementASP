<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-light navbar-white text-sm elevation-1" style="background-color:white">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- Messages Dropdown Menu -->
        <!-- Notifications Dropdown Menu -->
        <li class="nav-item" style="margin-top:5%">
            <a href="/User/User_Detail?id=@(User.UserId)" style="color:white;background-color:#14a33e">
                <span class="badge" style="min-height:20px;background-color:#14a33e;margin-top:-10px">@User.FullName</span>
            </a>
        </li>
        <li class="nav-item dropdown show">
            <a data-toggle="dropdown" href="/User/User_Detail?id=@(User.UserId)">
                <div class="user-panel">
                    <div class="image" style="border:none;margin-bottom:5px;margin-right:5px">
                        @if (User.Image != null)

                        {
                            <img src="@{
                                var url = string.Format ( "{0}://{1}{2}",Request.Url.Scheme,Request.Url.Authority,Url.Content ( "~" ) );
                                @url
                        }Resource/EZIMGA?appx=@User.Image" class="img-circle elevation-2" alt="User Image">
                        }
                        else
                        {
                            <img src="~/Images/User/user-default.jpg" class="img-circle elevation-2" alt="User Image" />
                        }
                    </div>
                </div>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="min-width:200px">
                <div class="dropdown-divider"></div>
                <a href="/User/User_Detail?id=@User.UserId" class="dropdown-item">
                    <i class="fas fa-user mr-2"></i> Thông tin cá nhân
                </a>
                <div class="dropdown-divider"></div>
                @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new
                {
                    id = "logoutForm",
                    @class = ""
                }))
                {
                    @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item"><i class="fas fa-sign-out-alt"></i>&nbsp;&nbsp;Đăng xuất</a>
                }
                <div class="dropdown-divider"></div>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->

<div id="navbar-search" style="display:none;position:absolute;top:50%;left:50%;padding:2px;">
    <img src="~/Content/img/loader.gif" />
</div>