@model Ehr.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Confirm Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>@ViewBag.Title.</h2>

<div class="card">
    <div class="card-body login-card-body">
        @using (Html.BeginForm("ConfirmPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4><span class="text-primary">@ViewBag.Message</span></h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = " control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Confirm" />
                    <a href="/Account/Login" class="btn btn-primary">Login</a>
                </div>

            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
